<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="membership_date"/>
                <field name="active"/>
                <field name="borrow_count" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Library Member">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_open_borrow_history"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book">
                            <field name="borrow_count" widget="statinfo" string="Borrows"/>
                        </button>
                        <button name="action_open_fines"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-money">
                            <field name="fine_count" widget="statinfo" string="Fines"/>
                        </button>
                    </div>


                    <group>
                        <field name="name"/>
                        <field name="membership_date"/>
                    </group>

                    <group>
                        <field name="phone" widget="phone"/>
                        <field name="email" widget="email"/>
                        <field name="active"/>
                    </group>

                    <notebook>
                        <page string="Borrow History">
                            <field name="borrow_ids"
                                   context="{'default_member_id': id}">
                                <list>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="return_date"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Member Search">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <filter string="Active"
                            name="active"
                            domain="[('active','=',True)]"/>

                    <filter string="Inactive"
                            name="inactive"
                            domain="[('active','=',False)]"/>
                    <group>
                        <filter string="Membership Date"
                                name="group_by_date"
                                context="{'group_by':'membership_date'}"/>
                    </group>
            </search>
        </field>
    </record>

    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_library_member_search"/>

    </record>

</odoo>
